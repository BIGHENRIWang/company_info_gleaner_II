	function showGallery(target) {
    	// check if item exist
    	if (!items.hasOwnProperty(target)) {
    		return false;
    	}

    	// define options (if needed)
		var options = {
		    // optionName: 'option value'
		    // for example:
		    index: 0, // start at first slide
		    history: false
		};
		var pswpElement = document.querySelectorAll('.pswp')[0];
		var imageItems = [];
		// Initializes and opens PhotoSwipe
		var gallery = new PhotoSwipe( pswpElement, PhotoSwipeUI_Default, items[target], options);
		gallery.listen('gettingData', function(index, item) {
		    if (item.w < 1 || item.h < 1) { // unknown size
		        var img = new Image(); 
		        img.onload = function() { // will get size after load
					item.w = this.width; // set image width
					item.h = this.height; // set image height
					gallery.invalidateCurrItems(); // reinit Items
					gallery.updateSize(true); // reinit Items
		  		}
		    	img.src = item.src; // let's download image
		    }
		});
		gallery.init();
	}
	var dragging = false;
	/* handle drag and click, if drag do nothing*/
	$('.eventSlide').on('swipe', function(event, slick, direction){
		dragging = true;
	});
	$('.eventSlide').on('afterChange', function(event, slick, currentSlide, nextSlide){
		dragging = false;
	});
	$(".image_events").click(function(){
		if (!dragging) {
			var target = $(this).attr('href');
			target = target.replace("#", "");
			showGallery(target);
		}
		dragging = false;
		return false;
	});
    $('.eventSlide').slick({
		dots: true,
		infinite: true,
		autoplay: true,
		speed: 500,
		arrows: false,
	});
    $('.eventSlide div.title').css('width', (100.0/($('.eventSlide div.image').length)) + '%');
	$(".btn").mouseup(function(){ $(this).blur(); });
	$('.img_btn, .img_btn_top, .img_btn_bottom').hover(function(){
		$(this).prev().addClass("img_btn_hightlight");
	}, function(){
		$(this).prev().removeClass("img_btn_hightlight");
	});

	$('#emegency-notice').marquee({
	    //speed in milliseconds of the marquee
	    duration: 15000,
	    //time in milliseconds before the marquee will start animating
	    delayBeforeStart: 1500,
	    //'left' or 'right'
	    direction: 'left',
	    //true or false - should the marquee be duplicated to show an effect of continues flow
	    duplicated: false,
	    startVisible: true,
	    pauseOnHover: true
	});

	if ($('#emegency-notice').length > 0) {
		$('#middle-container').css('padding-top', 0);
	}

	var rtime;
	var timeout = false;
	var delta = 200;
	$(window).resize(function() {
	    rtime = new Date();
	    if (timeout === false) {
	        timeout = true;
	        setTimeout(resizeend, delta);
	    }
	});

	function resizeend() {
	    if (new Date() - rtime < delta) {
	        setTimeout(resizeend, delta);
	    } else {
	        timeout = false;
			$('#emegency-notice').marquee('destroy');
			$('#emegency-notice').marquee({
			    //speed in milliseconds of the marquee
			    duration: 15000,
			    //time in milliseconds before the marquee will start animating
			    delayBeforeStart: 1500,
			    //'left' or 'right'
			    direction: 'left',
			    //true or false - should the marquee be duplicated to show an effect of continues flow
			    duplicated: false,
			    startVisible: true,
			    pauseOnHover: true
			});
			newsClickEvent('a.notices');
	    }               
	}

