        <div class="col-sm-12">
            
            <div class="panel panel-primary center-box">
                <div class="panel-heading text-center">
                    <img src="/static/images/logo-sophos.png" alt="sophos-logo">
                </div>
            
                <div class="panel-body">
                
    <h4 class="text-center">Sign in with your Sophos ID.</h4>

    <div class="row">
        <div class="col-sm-12">
            <div id="okta-login-container"></div>
            <script type="text/javascript">
            jQuery(function($) {
                var baseUrl = 'https://sophos.okta.com';
                var profileUrl = 'https://id.sophos.com//web/profile';
                var propertiesPath = '/static/okta/i18n/';
                var langCode = 'en';

                function getI18nJson(type, countryCode) {
                    // English does not use the language code in the filename
                    var suffix = countryCode === 'en' ? '' : '_' + countryCode;
                    return $.getJSON(propertiesPath + type + suffix + '.json')
                    .then(function (res) {
                        return res;
                    });
                }

                function getParameterByName(name, url) {
                    if (!url) url = window.location.href;
                    name = name.replace(/[\[\]]/g, "\\$&");
                    var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
                        results = regex.exec(url);
                    if (!results) return null;
                    if (!results[2]) return '';
                    return decodeURIComponent(results[2].replace(/\+/g, " "));
                }

                function successCallback(res) {
                    if (res.status === 'SUCCESS') {
                        if (getParameterByName('fromURI') == null) {
                            res.session.setCookieAndRedirect(profileUrl);
                        } else {
                            res.session.setCookieAndRedirect(getParameterByName('fromURI'));
                        }
                    }
                }

                $('.language-switcher .dropdown-menu a').click(function () {
                    var newLang = $(this).attr('data-lang-code');
                    var re = new RegExp("[a-z]{2}(_[A-Z]{2})?");
                    var pathArray = window.location.pathname.split('/').filter(function(x) { return x != ""; });
                    var newPathname = '';
                    if (pathArray.length > 0 && pathArray[pathArray.length-1].match(re)) {
                        pathArray.pop();
                        pathArray.push(newLang);
                        newPathname = pathArray.join('/');
                    } else {
                        newPathname = [window.location.pathname, newLang].join('/');
                    }
                    var newHref = window.location.protocol + '//' + window.location.host + '/'
                        + newPathname + window.location.search;
                    window.location.href = newHref;
                });

                $.when(getI18nJson('country', langCode), getI18nJson('login', langCode))
                .then(function (countryLabels, loginLabels) {
                    // Bootstrap the Okta Sign-In Widget
                    var oktaSignIn = new OktaSignIn({
                        baseUrl: baseUrl,
                        country: countryLabels,
                        labels: loginLabels
                    });
                    oktaSignIn.renderEl(
                        { el: '#okta-login-container' },
                        successCallback
                    );
                });

                

                
                $('#okta-sign-in .o-form-button-bar').waitUntilExists(function() {
                    var $btn = $('.button', this);
                    var btn_text = $btn.val();
                    $btn.replaceWith('<button class="btn btn-success" data-type="save" type="submit"><span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>' + btn_text + '</button>');
                });

                
                $('#okta-sign-in span.input-icon').waitUntilExists(function() {
                    $(this).remove();
                });

                
                $('#okta-sign-in .o-form-input-name-username').waitUntilExists(function() {
                    $('input[name=username]', this)
                        .attr('placeholder', "Email Address")
                        .addClass('form-control');
                    $('span.input-tooltip', this)
                        .removeClass().addClass('input-tooltip glyphicon glyphicon-envelope')
                        .qtip('destroy', true);
                });
                $('#okta-sign-in .o-form-input-name-password').waitUntilExists(function() {
                    $('input[name=password]', this)
                        .attr('placeholder', "Password")
                        .addClass('form-control');
                    $('span.input-tooltip', this)
                        .removeClass().addClass('input-tooltip glyphicon glyphicon-lock')
                        .qtip('destroy', true);
                });
            });
            </script>
        </div>
    </div>

    <div class="row text-center">
