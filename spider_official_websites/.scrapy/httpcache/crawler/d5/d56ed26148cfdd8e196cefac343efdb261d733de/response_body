function displaySubs(k)
{//定义变量


	for(i=1;i<=10;i++)

	{
		if(i==k)
		{
		   document.getElementById('ida'+i).style.color="#cc0000";		
		}else
		{
			document.getElementById('ida'+i).style.color="#333333";		
		}
	}	
}	
